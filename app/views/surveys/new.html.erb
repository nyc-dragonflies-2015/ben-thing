<%= form_for @survey do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit 'Create a Survey' %>
<% end %>

<script type="text/javascript" charset="utf-8">
  $("form").on('submit', function(e) {
    e.preventDefault();
    $.ajax('/surveys', { method: 'POST', data: $(this).serialize() })
      .done(function(formPartial) {
        $(formPartial).appendTo("body").on('submit', function(ev) {
          ev.preventDefault();
          // About this time I got tired and gave up.
          alert( $(this).serialize() );
        });
      })
      .fail(function(data) {
      });
  });
</script>
